<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30pt"
        android:paddingLeft="40pt"
        android:paddingRight="40pt"
        android:paddingTop="20pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号:"
                android:textColor="@color/EditColor" />

            <EditText
                android:id="@+id/dd_bianhao"
                style="@style/textSize"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:paddingTop="0pt"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:minHeight="0pt"
                android:textColor="@color/EditColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构名称:"
                android:textColor="@color/EditColor" />

            <EditText
                android:id="@+id/jg_minghceng"
                style="@style/textSize"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:paddingTop="0pt"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:minHeight="0pt"
                android:singleLine="true"
                android:textColor="@color/EditColor" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请日期:"
                android:textColor="@color/EditColor" />

            <EditText
                android:id="@+id/sq_riqi"
                style="@style/textSize"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:paddingTop="0pt"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:minHeight="0pt"
                android:textColor="@color/EditColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描箱数:"
                android:textColor="@color/EditColor" />

            <EditText
                android:id="@+id/sum_xiang"
                style="@style/textSize"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:paddingTop="0pt"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:minHeight="0pt"
                android:textColor="@color/EditColor" />

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/push_dingdan"
        style="@style/buttonStyle"
        android:layout_gravity="center_horizontal"
        android:text="上传订单" />
</LinearLayout>
